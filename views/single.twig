{% extends "base.twig" %}
{% block content %}
    <article class="type-{{ post.post_type }}">
        <section class="article-body">
            <h1 class="entry-title">{{ post.title }}</h1>

            <div class="entry-meta">
                <a href="{{ post.author.path }}">
                    <span class="author vcard"><span class="fn">{{ post.author.name }}</span></span>
                </a>
                <span class="updated">{{ post.post_date|date }}</span>
            </div>
            <div class="article-content">{{ post.content }}</div>
        </section>
        {% if comment_form %}
            <section class="comments">
                <div class="respond">
                    <h3>Comments</h3>
                    {{ comment_form }}
                </div>
                <div class="responses">
                    {% for cmt in post.get_comments() %}
                        {% include "comment.twig" with {comment:cmt} %}
                    {% endfor %}
                </div>
            </section>
        {% endif %}
    </article>
{% endblock %}
